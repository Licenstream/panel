@page
@model LicenStream.WebUI.Pages.CustomerOverviewModel

@{
    ViewData["Title"] = "Customer Overview";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
    <tr>
        <th>
            Name
        </th>
        <th>
            Country
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Customers)
    {
        <tr>
            <td>
                <a asp-page="/CustomerDetail" asp-route-id="@item.Id">
                    @item.Name
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            @* <td> *@
            @*     $1$ <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> | #1# *@
            @*     <a asp-page="./CustomerDetail" asp-route-id="@item.Id">Details</a> *@
            @*     $1$ | <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a> #1# *@
            @* </td> *@
        </tr>
    }
    </tbody>
</table>